{
  "manifest_version": 2,
  "name": "XRPCharts+",
  "version": "1.0.0",
  "description": "Adds functionalities to the https://xrpcharts.ripple.com/.",
  "default_locale": "en",
  "icons":{
    "48": "icons/coin_xrp_48.png",
    "128": "icons/coin_xrp_128.png"
  },
  "permissions": [
    "contextMenus",
    "storage",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],

  "browser_action":{
    "default_icon": {
      "48": "icons/coin_xrp_48.png",
      "128": "icons/coin_xrp_128.png"
    }
  },

  "options_page": "html/options.html",

  "web_accessible_resources": [
    "icons/coin_xrp_48.png",
    "icons/coin_xrp_128.png"
  ],

  "content_scripts": [
    {
      "matches": [
        "https://xrpcharts.ripple.com/*",
        "http://xrpcharts.ripple.com/*"
      ],
      "css": [
        "css/animate.css",
        "css/roboto.css",
        "css/content-script.css"
      ],
      "js": [
        "lib/jquery-3.2.1.min.js",
        "lib/moment.min.js",
        "js/content-script.js"
      ],
      "run_at": "document_end"
    }
  ]
}